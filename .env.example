# Blaulicht Atlas 24 - Environment Configuration Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000

# Frontend Configuration (for CORS in production)
FRONTEND_URL=http://localhost:3000

# API Keys (for future integrations)
# Twitter/X API (for police account monitoring)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# External Data Sources
# BKA API (if available)
BKA_API_KEY=your_bka_api_key_here
BKA_API_URL=https://api.bka.de

# Database Configuration (for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/blaulichtatlas
REDIS_URL=redis://localhost:6379

# Security Configuration
SESSION_SECRET=your-very-secure-random-string-here-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_DURATION_MS=300000

# Logging Configuration
LOG_LEVEL=info

# Production Deployment Example
# NODE_ENV=production
# PORT=3000
# FRONTEND_URL=https://blaulichtatlas24.example.com
# DATABASE_URL=postgresql://prod_user:secure_password@db.example.com:5432/blaulichtatlas_prod
